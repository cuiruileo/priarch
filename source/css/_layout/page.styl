#page, #archive, #tag, #category {
  position: relative;
  max-width: $main-width;
  margin: 0 auto;
 
  background-color: white;
  padding: 1rem 0.5rem;

  +mobile() {
    margin: 0 0 1rem 0;
  }
}

// page
.page {
  &-subtitle {
    text-align: center;
    color: $gray;
    font-size: 1rem;
    margin: 0.5rem;
  }
}

// tag
// category
.category-lists, .tag-cloud {
  text-align: center;
  padding: 1rem 2rem;

  a {
    display: inline-block;
    margin: 0 0.4rem;
    text-decoration: none;

    &:hover {
      color: $black !important;
    }
  }
}

.category-lists {
  text-align: left;

  .category-list {
    padding-inline-start: 0px;

    &-item {
      list-style: none;

      &:hover {
        &::before {
          color: $blue;
        }
      }

      &::before {
        content: 'üìÇ';
      }
    }

    &-child {
      .category-list-item {
        &::before {
          content: 'üìÅ';
        }
      }
    }

    &-link {
      color: $dark;
      border-bottom: 1px dotted $gray;
    }

    &-count {
      &::before {
        content: ' [ ';
      }

      &::after {
        content: ' ] ';
      }
    }
  }
}
